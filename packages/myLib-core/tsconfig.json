{
  "compilerOptions": {
    // es6 code in browser
    "target": "es2015",
    // to leverage tree shaking
    "module": "es2015",
    "moduleResolution": "node",
    // this enables stricter inference for data properties on `this`
    // or at least noImplicitThis: true
    "strict": true,
    "noImplicitAny": false,
    // generate type files
    "declaration": true,
    // other
    "sourceMap": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitThis": true,
    "noEmitOnError": false,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./build",
    "lib": [
      "es2015",
      "dom"
    ],
  },
  "include": [
    "src/**/*.ts"
  ]
}